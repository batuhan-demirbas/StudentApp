<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ForgotPasswordFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailEditTextFromForgotLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="320dp"
        android:layout_height="56dp"
        android:layout_marginTop="240dp"
        android:hint="Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailEditTextFromForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonChangePassword"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"

        android:text="Değiştirme Maili Gönder"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/emailEditTextFromForgotLayout"
        app:layout_constraintEnd_toEndOf="@id/emailEditTextFromForgotLayout"
        app:layout_constraintTop_toBottomOf="@+id/emailEditTextFromForgotLayout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>