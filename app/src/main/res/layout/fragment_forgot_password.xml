<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ForgotPasswordFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/numberEditTextFromForgotLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="320dp"
        android:layout_height="56dp"
        android:layout_marginTop="180dp"
        android:hint="Öğrenci numarası"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/numberEditTextFromForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameEditTextFromForgotLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="320dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:hint="İsim Soyisim"
        app:layout_constraintStart_toStartOf="@+id/numberEditTextFromForgotLayout"
        app:layout_constraintEnd_toEndOf="@+id/numberEditTextFromForgotLayout"
        app:layout_constraintTop_toBottomOf="@+id/numberEditTextFromForgotLayout"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameEditTextFromForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/newPasswordEditTextFromForgotLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="320dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:hint="Yeni şifre"
        app:endIconMode="password_toggle"
        app:layout_constraintStart_toStartOf="@+id/nameEditTextFromForgotLayout"
        app:layout_constraintEnd_toEndOf="@+id/nameEditTextFromForgotLayout"
        app:layout_constraintTop_toBottomOf="@+id/nameEditTextFromForgotLayout"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newPasswordEditTextFromForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonChangePassword"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"

        android:text="Şifreyi Değiştir"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/newPasswordEditTextFromForgotLayout"
        app:layout_constraintEnd_toEndOf="@id/newPasswordEditTextFromForgotLayout"
        app:layout_constraintTop_toBottomOf="@+id/newPasswordEditTextFromForgotLayout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>